{
  "type": "object",
  "required": ["data"],

  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["uuid", "name", "type", "itemUuid", "size", "param", "modelTransform"],

        "properties": {
          "blockId": {
            "type": "string",
            "format": "uuid",
            "autoGenerated": true
          },

          "name": {
            "type": "string",
            "enum": [ "GearBeltConveyor" ]
          },
          "type": {
            "type": "string"
          },

          "itemUuid": {
            "type": "string",
            "format": "uuid",
            "foreignKey": "item:itemId:name"
          },
          "size": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },

          "param": {
            "oneOf": [
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "GearBeltConveyor"
                    }
                  }
                },

                "then": {

                  "type": "object",
                  "required": ["slot", "time", "inventoryConnectors", "gearConnects"],

                  "properties": {
                    "slot": {"type": "integer"},
                    "time": {"type": "number"},

                    "inventoryConnectors": {
                      "type": "object",
                      "required": ["inputConnects", "outputConnects"],

                      "properties": {

                        "inputConnects": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": ["offset", "directions"],

                            "properties": {

                              "offset": {
                                "type": "array",
                                "pattern": "@vector3Int",
                                "items": {
                                  "type": "integer"
                                }
                              },

                              "directions": {
                                "type": "array",
                                "items": {
                                  "type": "array",
                                  "pattern": "@vector3Int",
                                  "items": {
                                    "type": "integer"
                                  }
                                }
                              }
                            }
                          }
                        },

                        "outputConnects": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": ["offset", "directions"],

                            "properties": {

                              "offset": {
                                "type": "array",
                                "pattern": "@vector3Int",
                                "items": {
                                  "type": "integer"
                                }
                              },

                              "directions": {
                                "type": "array",
                                "items": {
                                  "type": "array",
                                  "pattern": "@vector3Int",
                                  "items": {
                                    "type": "integer"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    },
                    "gearConnects": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["offset", "directions", "option"],
                        "properties": {
                          "offset": {
                            "type": "array",
                            "pattern": "@vector3Int",
                            "items": {
                              "type": "integer"
                            }
                          },
                          "directions": {
                            "type": "array",
                            "items": {
                              "type": "array",
                              "pattern": "@vector3Int",
                              "items": {
                                "type": "integer"
                              }
                            }
                          },
                          "option": {
                            "type": "object",
                            "required": ["isReverse", "onlySpecifiedTypes"],

                            "properties": {
                              "isReverse": {
                                "type": "boolean"
                              },
                              "onlySpecifiedTypes": {
                                "type": "array",
                                "items": {
                                  "type": "string"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            ]
          },

          "modelTransform": {
            "type": "object",
            "required": [
              "position",
              "rotation",
              "scale"
            ],
            "properties": {
              "position": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "rotation": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "scale": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}