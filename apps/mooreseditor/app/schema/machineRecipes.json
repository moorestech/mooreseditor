{
  "$id": "machineRecipes",
  "type": "object",
  "required": ["data"],
  "properties": {

    "machineRecipes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["blockId", "time", "input", "output"],
        "properties": {
          "blockId": {
            "type": "string",
            "format": "uuid",
            "foreignKey": "blocks:blocks:blockId:name"
          },
          "time": {
            "type": "number",
            "default": 1
          },
          "input": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["itemId", "count"],
              "properties": {
                "itemId": {
                  "type": "string",
                  "format": "uuid",
                  "foreignKey": "items:items:itemId:name"
                },
                "count": {
                  "type": "integer",
                  "default": 1
                }
              }
            }
          },
          "output": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["itemId", "count"],
              "properties": {
                "itemId": {
                  "type": "string",
                  "format": "uuid",
                  "foreignKey": "items:items:itemId:name"
                },
                "count": {
                  "type": "integer",
                  "default": 1
                },
                "percent": {
                  "type": "number",
                  "default": 1,
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          }
        }
      }
    }
  }
}
