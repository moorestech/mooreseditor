{
  "$id": "schemaSample",
  "type": "object",
  "isDefaultOpen": true,
  "properties": {
    "data": {
      "type": "array",
      "overrideCodeGeneratePropertyName": "schemaSampleElement",
      "items": {
        "type": "object",
        "properties": {
          "elementGuid": {
            "type": "string",
            "format": "uuid",
            "autoGenerated": true
          },
          "name": {
            "type": "string"
          },
          "elementType": {
            "type": "string",
            "enum": [
              "Parameter1",
              "Parameter2"
            ]
          },
          "elementParam": {
            "oneOf": [
              {
                "if": {
                  "properties": {
                    "elementType": { "const": "Parameter1" }
                  }
                },
                "then": {
                  "type": "object",
                  "properties": {


                    "blockSize": {
                      "type": "array",
                      "pattern": "@vector3Int",
                      "items": {
                        "type": "integer"
                      },
                      "default": [1, 1, 1]
                    },


                    "booleanValue": {
                      "type": "boolean",
                      "default": false
                    },

                    "connectObject" : {
                      "type": "object",
                        "properties": {

                          "connectOptionType": {
                            "type": "string",
                            "enum": ["Type1", "Type2"],
                            "description": "TODO これは後々外部（上位スキーマ？）から設定できるようにする"
                          },

                          "offset": {
                            "type": "array",
                            "pattern": "@vector3Int",
                            "items": {
                              "type": "integer"
                            },
                            "default": [
                              0,
                              0,
                              0
                            ]
                          },

                          "directions": {
                            "type": "array",
                            "optional": true,
                            "items": {
                              "type": "array",
                              "pattern": "@vector3Int",
                              "items": {
                                "type": "integer"
                              },
                              "default": [
                                0,
                                0,
                                0
                              ]
                            }
                          },


                          "connectOptionParam": {
                            "oneOf": [
                              {
                                "if": {
                                  "properties": {
                                    "connectOptionType": { "const": "Type1" }
                                  }
                                },
                                "then": {
                                  "type": "object",
                                  "properties": {


                                    "booleanOption": {
                                      "type": "boolean",
                                      "default": true
                                    },

                                    "inventoryOptions" :{
                                      "type": "array",
                                      "optional": true,

                                      "items": {
                                        "type": "object",
                                        "properties": {

                                          "inventoryConnectOptionType": {
                                            "type": "string",
                                            "enum": ["Option1", "Option2"]
                                          },

                                          "inventoryConnectOptionParam": {
                                            "oneOf": [
                                              {
                                                "if": {
                                                  "properties": {
                                                    "inventoryConnectOptionType": { "const": "Option2" }
                                                  }
                                                },
                                                "then": {
                                                  "type": "object",
                                                  "properties": {

                                                    "connectType": {
                                                      "type": "string",
                                                      "enum": ["Network", "Factory"]
                                                    }
                                                  }
                                                }

                                              }
                                            ]
                                          }

                                        }
                                      }

                                    }
                                  }
                                }
                              },

                              {
                                "if": {
                                  "properties": {
                                    "connectOptionType": { "const": "Type2" }
                                  }
                                },
                                "then": {
                                  "type": "object",
                                  "properties": {

                                    "booleanOption": {
                                      "type": "boolean",
                                      "default": true
                                    }
                                  }
                                }
                              }

                            ]
                          }
                        }
                    }


                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "elementType": { "const": "Parameter2" }
                  }
                },
                "then": {
                  "type": "object",
                  "properties": {

                    "title": {
                      "type": "string",
                      "default": "New Challenge"
                    }

                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}
