{
  "$id": "gearConnects",
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "gearConnects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["offset", "directions"],
        "properties": {
          "offset": {
            "type": "array",
            "pattern": "@vector3Int",
            "items": {
              "type": "integer"
            }
          },
          "directions": {
            "type": "array",
            "items": {
              "type": "array",
              "pattern": "@vector3Int",
              "items": {
                "type": "integer"
              }
            }
          },
          "option": {
            "type": "object",
            "properties": {
              "isReverse": { "type": "boolean" }
            },
            "required": ["isReverse"]
          }
        }
      }
    }
  }
}
