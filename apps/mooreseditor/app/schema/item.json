{
  "type": "object",
  "required": [ "items" ],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "itemId", "itemStack" ],

        "properties": {
          "itemId": {
            "type": "string",
            "pattern": "@uuid",
            "format": "@autoGenerated"
          },

          "imagePath": {
            "type": "string",
            "pattern": "@imagePath",
            "format": "@thumbnail"
          },

          "name": {
            "type": "string"
          },

          "maxStack": {
            "type": "integer"
          }
        }
      }
    }
  }
}