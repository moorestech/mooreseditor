{
  "$id": "blocks",
  "type": "object",
  "required": [ "data" ],
  "properties": {

    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["blockId", "name", "blockType", "itemId", "size", "param", "modelTransform"],

        "properties": {
          "blockId": {
            "type": "string",
            "format": "uuid",
            "autoGenerated": true
          },

          "name": {
            "type": "string"
          },
          "blockType": {
            "type": "string",
            "enum": [
              "Block","BeltConveyor","Chest",
              "ElectricMachine","ElectricPole","ElectricGenerator","ElectricMiner",

              "Gear","Shaft","GearMachine","SimpleGearGenerator","GearBeltConveyor",
              "ItemShooter"]
          },

          "itemId": {
            "type": "string",
            "format": "uuid",
            "foreignKey": "item:itemId:name"
          },
          "size": {
            "type": "array",
            "pattern": "@vector3Int",
            "items": {
              "type": "integer"
            }
          },

          "param": {
            "oneOf": [
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "BeltConveyor"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["slot", "time", "inventoryConnectors"],

                  "properties": {
                    "slot": {"type": "integer"},
                    "time": {"type": "number"},
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "Chest"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["slot", "inventoryConnectors"],

                  "properties": {
                    "slot": {"type": "integer"},
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricMachine"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["inputSlot", "outputSlot", "requiredPower", "inventoryConnectors"],

                  "properties": {
                    "inputSlot": {"type": "integer"},
                    "outputSlot": {"type": "integer"},
                    "requiredPower": {"type": "number"},
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricPole"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["poleConnectionRange", "machineConnectionRange"],

                  "properties": {
                    "poleConnectionRange": {"type": "integer"},
                    "machineConnectionRange": {"type": "integer"}
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricGenerator"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["isInfinityPower", "infinityPower", "fuelSlot", "inventoryConnectors"],

                  "properties": {
                    "isInfinityPower": {"type": "boolean"},
                    "infinityPower": {"type": "integer"},
                    "fuelSlot": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [ "itemId", "time", "power" ],

                        "properties": {
                          "itemId": {
                            "type": "string",
                            "format": "uuid",
                            "foreignKey": "item:itemId:name"
                          },

                          "time": {
                            "type": "number"
                          },
                          "power": {
                            "type": "number"
                          }
                        }
                      }
                    },
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricMiner"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["requiredPower","outputSlot","mineSettings","inventoryConnectors"],

                  "properties": {
                    "requiredPower": {"type": "number"},
                    "outputSlot": {"type": "integer"},
                    "mineSettings": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [ "itemId", "time" ],

                        "properties": {
                          "itemId": {
                            "type": "string",
                            "format": "uuid",
                            "foreignKey": "item:itemId:name"
                          },

                          "time": {
                            "type": "number"
                          }
                        }
                      }
                    },
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "GearBeltConveyor"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["slot", "time", "inventoryConnectors", "gearConnects"],

                  "properties": {
                    "slot": {"type": "integer"},
                    "time": {"type": "number"},
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    },
                    "gearConnects": {
                      "$ref": "gearConnects"
                    }
                  }
                }
              }
            ]
          },

          "modelTransform": {
            "$ref": "modelTransform"
          }
        }
      }
    }
  }
}