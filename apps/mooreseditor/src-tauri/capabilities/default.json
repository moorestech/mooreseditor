{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "fs:scope",
      "allow": ["$DOCUMENT/**/*", "$HOME/**/*"],
      "deny": []
    },
    "core:default",
    "opener:default",
    "dialog:allow-open",
    "fs:allow-open",
    "fs:allow-mkdir",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-seek",
    "fs:allow-stat",
    "fs:read-dirs",
    "fs:read-files",
    "fs:write-files"
  ]
}
