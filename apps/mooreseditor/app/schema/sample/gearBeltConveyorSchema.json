{
  "$id": "blocks",
  "type": "object",
  "required": [ "data" ],
  "properties": {

    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["blockId", "name", "blockType", "itemId", "size", "param", "modelTransform"],

        "properties": {
          "blockId": {
            "type": "string",
            "format": "uuid",
            "autoGenerated": true
          },

          "name": {
            "type": "string"
          },
          "blockType": {
            "type": "string",
            "enum": [
              "Block","BeltConveyor","Chest",
              "ElectricMachine","ElectricPole","ElectricGenerator","ElectricMiner",

              "Gear","Shaft","GearMachine","SimpleGearGenerator","GearBeltConveyor",
            "ItemShooter"]
          },

          "itemId": {
            "type": "string",
            "format": "uuid",
            "foreignKey": "item:itemId:name"
          },
          "size": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },

          "param": {
            "oneOf": [
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "BeltConveyor"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["slot", "time", "inventoryConnectors", "gearConnects"],

                  "properties": {
                    "slot": {"type": "integer"},
                    "time": {"type": "number"},
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "ElectricMachine"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["slot", "time", "inventoryConnectors", "gearConnects"],

                  "properties": {
                    "inputSlot": {"type": "integer"},
                    "outputSlot": {"type": "integer"},
                    "requiredPower": {"type": "number"},
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "GearBeltConveyor"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "required": ["slot", "time", "inventoryConnectors", "gearConnects"],

                  "properties": {
                    "slot": {"type": "integer"},
                    "time": {"type": "number"},
                    "inventoryConnectors": {
                      "$ref": "inputConnects"
                    },
                    "gearConnects": {
                      "$ref": "gearConnects"
                    }
                  }
                }
              }
            ]
          },

          "modelTransform": {
            "$ref": "modelTransform"
          }
        }
      }
    }
  }
}