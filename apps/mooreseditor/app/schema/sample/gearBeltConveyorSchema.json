{
  "$id": "blocks",
  "type": "object",
  "required": [ "data" ],
  "properties": {

    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["blockId", "name", "blockType", "itemId", "size", "param", "modelTransform"],

        "properties": {
          "blockId": {
            "type": "string",
            "format": "uuid",
            "autoGenerated": true
          },

          "name": {
            "type": "string"
          },
          "blockType": {
            "type": "string",
            "enum": [ "GearBeltConveyor" ]
          },

          "itemId": {
            "type": "string",
            "format": "uuid",
            "foreignKey": "item:itemId:name"
          },
          "size": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },

          "param": {
            "oneOf": [
              {
                "if": {
                  "properties": {
                    "blockType": {
                      "const": "GearBeltConveyor"
                    }
                  }
                },

                "then": {

                  "type": "object",
                  "required": ["slot", "time", "inventoryConnectors", "gearConnects"],

                  "properties": {
                    "slot": {"type": "integer"},
                    "time": {"type": "number"},

                    "inventoryConnectors": {
                      "$ref": "inventoryConnectors"
                    },
                    "gearConnects" : {
                      "$ref": "gearConnects"
                    }
                  }
                }
              }
            ]
          },

          "modelTransform": {
            "type": "object",
            "required": [
              "position",
              "rotation",
              "scale"
            ],
            "properties": {
              "position": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "rotation": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "scale": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}